extends layout

mixin fraction
  .fraction
    span.current.part 0
    | /
    span.total.part 0

mixin button(name)
  button.button(class=attributes.class)
    span.text= name
    .area â¬¢

block content
  .viewport
    .background
    input(type='text').input
    ul.pages
      li.page.intro
        h1.title
          | Know
          br
          | Your
          br
          | Siftie
        nav.buttons
          +button('Easy').easy
          +button('Hard').hard
      li.page.game
        .hud
          .probability 100%
          .progress
            +fraction
          .button-container
            nav.buttons
              +button('Skip').skip
        .person
          img.picture
          h3.name
          h4.title
          p.description
      li.page.results
        .score
          +fraction
        .people-area
          ul.people
          nav.buttons
            +button('Again?').again

block js
  script(src='/js/index.js')