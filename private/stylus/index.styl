@import 'reset.styl'

html
  font-family: ProximaNova, "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight 100

html, body, .viewport, .pages, .page
  width 100%
  height 100%

button(size, color)
  colorDifference = 0.2
  shadowOpacity = 0.2
  shadowSize = 10px
  position relative
  width size
  height size
  text-align center
  cursor pointer
  transition margin-top 200ms
  &:hover
    margin-top (shadowSize * 0.5)
    .area
      text-shadow 0 (shadowSize * 0.5) rgba(lighten(color, colorDifference), shadowOpacity)
  .area
    font-size size * 1.2
    position absolute
    top -50%
    left -(size * 0.04)
    color color
    transition text-shadow 200ms
    text-shadow 0 shadowSize rgba(lighten(color, colorDifference), shadowOpacity)
  .text
    z-index: 100
    position absolute
    font-size size * 0.3
    color white
    font-weight 100
    width 100%
    left 0
    top 30%

.background
  position absolute

.page
  position absolute
  
  &.intro
    .title
      width = 500px
      height = 400px 
      display block
      width width
      height height
      position absolute
      top 50%
      left 50%
      margin-left -(width * 0.5)
      margin-top -(height * 0.5)
      font-size 100px
      text-align: center
      letter-spacing 10px
      line-height 1.1
    .buttons
      position: absolute
      bottom 10%
      height 100px
      width 40%
      margin-left 30%
      .button
        size = 100px
        button(size, blue)
        &.easy
          float: left
        &.hard
          float: right
        
