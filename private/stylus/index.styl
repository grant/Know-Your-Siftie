@import 'reset.styl'

html
  font-family: ProximaNova, "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight 100

html, body, .viewport, .pages, .page
  width 100%
  height 100%

.background
  position absolute

.page
  position absolute
  
  &.intro
    .title
      width = 500px
      height = 400px 
      display block
      width width
      height height
      position absolute
      top 50%
      left 50%
      margin-left -(width * 0.5)
      margin-top -(height * 0.5)
      font-size 100px
      text-align: center
      letter-spacing 10px
      line-height 1.1
