@import 'reset.styl'

html
  font-family ProximaNova, "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight 100
  color #666

html, body, .viewport, .pages, .page
  width 100%
  height 100%

blueColor = rgb(39, 169, 225)
orangeColor = rgb(242, 106, 47)
redColor = rgb(218, 85, 78)
greenColor = rgb(162, 211, 105)
textColor = #666

// A fraction
fraction(size)
  font-size size
  .part
    padding 0 size * 0.2

// A hexagon button
button(size, color)
  colorDifference = 20%
  shadowOpacity = 20%
  shadowSize = 10px
  position relative
  width size
  height size
  text-align center
  cursor pointer
  transition margin-top 200ms
  &:hover
    margin-top (shadowSize * 0.5)
  .area
    font-size size * 1.2
    position absolute
    top -50%
    left -(size * 0.04)
    color color
    transition text-shadow 200ms
    text-shadow 0 shadowSize rgba(lighten(color, colorDifference), shadowOpacity)
    &:hover
      text-shadow 0 (shadowSize * 0.5) rgba(lighten(color, colorDifference), shadowOpacity)
      color lighten(color, colorDifference)
  .text
    pointer-events none
    z-index 100
    position absolute
    font-size size * 0.3
    color white
    font-weight 100
    width 100%
    left 0
    top 30%

.background
  position absolute

.page
  position absolute
  
  &.intro
    .title
      width = 500px
      height = 400px 
      display block
      width width
      height height
      position absolute
      top 50%
      left 50%
      margin-left -(width * 0.5)
      margin-top -(height * 0.5)
      font-size 100px
      text-align center
      letter-spacing 10px
      line-height 1.1
    .buttons
      position absolute
      bottom 10%
      height 100px
      width 40%
      margin-left 30%
      .button
        size = 100px
        &.easy
          button(size, blueColor)
          float left
        &.hard
          button(size, orangeColor)
          float right

  &.game
    .hud
      position absolute
      width 100%
      height 100%
      
      .progress
        position absolute
        top 10px
        right 10px
        color rgba(lighten(textColor, 60%), 70%)
        fraction(30px)

      .button-container
        size = 100px
        position absolute
        bottom size + 10px
        width 100%
        nav.buttons
          position absolute
          text-align center
          width 100%
          .button
            button(size, orangeColor)

    .person
      position absolute
      width 100%
      top 30%
      text-align center
      letter-spacing 2px
      
      .picture
        display block
        margin 0 auto
        width 200px
        border-radius 50%
      .name
        margin-top 40px
        transition color 100ms
        &.correct
          color green
        &.incorrect
          color red
      .title
        margin-top 30px
      .description
        margin 20px auto
        width 500px
        font-weight 400
        font-size 20px
        line-height 1.5
        letter-spacing 0
        color textColor

  &.results
    .score
      position absolute
      text-align center
      width 100%
      top 30%
      fraction(200px)
      color #ccc
      .part
        color #999
    .people-area
      position absolute
      width 100%
      top 80%
      .people
        text-align center
        width 100%
        .person
          display inline-block
          width 200px
          height 270px
          padding 20px
          margin 20px
          border-radius 3px
          &.correct
            correctColor = greenColor
            border 2px solid correctColor
            color correctColor
          &.incorrect
            incorrectColor = redColor
            border 2px solid incorrectColor
            color incorrectColor
          .picture
            width 100%
            border-radius 50%
          .name
            text-align center
            margin-top 20px
      .buttons
        margin 20px 0
        text-align center
        .button
          button(100px, orangeColor)
          .text
            font-size 24px
  &.game, &.results
    display none